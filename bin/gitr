#!/bin/bash

COMMAND=""
CMD=$1
DIRECTORIES=$(ls -1d */)

if [ $# -lt 1 ] ; then
	echo "Usage: gitr <command>"
	echo "Supported commands : status,pull,push"
	exit 0
fi

shift

if [ $# -gt 0 ] ; then
	DIRECTORIES=$*
fi

# Analyzing command
case "$CMD" in
"stat" | "status")
	COMMAND="status"
	;;
"pull")
	COMMAND="pull"
	;;
"push")
	COMMAND="push"
	;;
"log")
	COMMAND="log -n1"
	;;
"info")
	COMMAND="remote -v"
	;;
"dev")
	COMMAND="checkout dev"
	;;
"master")
	COMMAND="checkout master"
	;;
*)
	echo "Git command not supported"
	exit 0
esac

# Executing command recursively
I=0
NOGIT=""
for dir in $DIRECTORIES ; do
	cd $dir
	if [ -d ".git" ] ; then
		if [[ $I -gt 0 ]] ; then
			echo -e "\n\e[1m--------------------------------------------------\e[0m"
		fi
		echo -e "\e[1m$dir\e[0m: \e[92mgit $COMMAND\e[0m"
		git $COMMAND
		I=$(($I+1))
	else
		NOGIT="$NOGIT $dir"
	fi
	cd - >/dev/null
done

if [ "$NOGIT" != "" ] ; then
	if [[ $I -gt 0 ]] ; then
		echo -e "\n\e[1m--------------------------------------------------\e[0m"
	fi
	echo -e "\e[1mNot git repository\e[0m: \e[93m$NOGIT\e[0m"
fi
